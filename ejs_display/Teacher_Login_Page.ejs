<%- include('../Headers/Teacher_Login_Header.ejs')%>
<div  style="display: flex;justify-content: center;align-items: center;"><h1>TEACHER LOG-IN</h1></div>


<form style="justify-content: center" action="/teacher-display" class="container" method="post">
  
  <div class="form-group centere">
      <label for="exampleInputEmail1" class="mt10">Email address</label>
      <input type="email" class="form-control wi50 mt10"  name="email" style="width: 50%;" id="exampleInputEmail1"  aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group centere">
      <label for="exampleInputPassword1" class="mt10" style="display: block;">Password</label>
      <input type="password" class="form-control mt10 " 
      name="password" style="width: 50%;" id="exampleInputPassword1"
       placeholder="Password">
      </div>
      <div class="form-group centere mt10">
          <h3 style="color: red;"> <%=error%></h3>
        </div>
           
    <div class="form-group centere mt10">
      <button type="submit" class="btn btn-primary wi50">Log-In</button>
      </div>
      
  </form>
<%- include('../Footers/Teacher_Login_footer.ejs')%>